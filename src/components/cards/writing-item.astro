---
import FormattedDate from "@components/misc/formatted-date.astro";

const { title, date, slug } = Astro.props;
---

<a href={`/writings/${slug}`}>
	<article class='flex flex-row items-start justify-between w-full gap-4'>
		<h3 class='text-base font-medium flex-1'>{title}</h3>
		<p class='text-gray-500 font-medium flex-shrink-0 whitespace-nowrap'>
			<FormattedDate date={date} />
		</p>
	</article>
</a>
